<?xml version="1.0" encoding="UTF-8"?>
<bot xmlns="http://github.com/Justis-Lamanna/botSchema.xsd">
    <configuration>
        <discord>
            <token>${token}</token>
            <prefix>!</prefix>
            <presence>
                <status>DO_NOT_DISTURB</status>
                <playing>v3!</playing>
            </presence>
        </discord>
    </configuration>
    <commands>
        <command>
            <name>math</name>
            <aliases>
                <alias>mathematics</alias>
            </aliases>
            <behaviors>
                <behavior>
                    <parameters>
                        <parameter>expression</parameter>
                    </parameters>
                    <action>
                        <respond>The answer is 3.</respond>
                    </action>
                </behavior>
            </behaviors>
        </command>
        <command>
            <name>eggplant</name>
            <behaviors>
                <behavior>
                    <action>
                        <respond>Hi, {user}</respond>
                    </action>
                </behavior>
            </behaviors>
        </command>
    </commands>
</bot>